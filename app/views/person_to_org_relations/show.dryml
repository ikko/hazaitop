<show-page>
  <heading:>
    <view:person/> és <view:organization/>
  </heading:>
  <record-flags: replace></record-flags:>
  <field-list: fields="p2o_relation_type, start_time, end_time, information_source">
    <p2o-relation-type-label:> 
      Kapcsolat 
    </p2o-relation-type-label:>
    <p2o-relation-type-view:>
      <view/> <%= '&nbsp;' %> <view with="&this_parent.role" if="&this_parent.role"/>
    </p2o-relation-type-view:>
    <end-time-label:>
      <%= this_parent.no_end_time ? "" : "Záró dátum" %>
    </end-time-label:>
    <end-time-view:>
      <view:end-time unless="&this_parent.no_end_time"/>
    </end-time-view:>
  </field-list:>
  <collection-heading: class="details_header">
    Cikkek:
  </collection-heading:>
</show-page>
